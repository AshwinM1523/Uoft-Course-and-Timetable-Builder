<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/login_button"
        android:layout_width="170dp"
        android:layout_height="47dp"
        android:layout_gravity="start"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_styling"
        android:fontFamily="@font/montserrat"
        android:text="@string/home_page_register_btn"
        app:backgroundTint="#1C375B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password3" />

    <EditText
        android:id="@+id/password3"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:autofillHints="password"
        android:background="@drawable/textfield_styling"
        android:hint="  Confirm Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password2" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:autofillHints="password"
        android:background="@drawable/textfield_styling"
        android:hint="  Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username2" />

    <EditText
        android:id="@+id/username2"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/textfield_styling"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/radioButtonStudent"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_styling"
            android:fontFamily="@font/montserrat"
            android:checked="true"
            android:buttonTint="#1C375B"
            android:text="Student" />

        <RadioButton
            android:id="@+id/radioButtonAdmin"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_styling"
            android:fontFamily="@font/montserrat"
            android:buttonTint="#1C375B"
            android:text="Admin" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>